#キャノンの見た目とアイテムを変える / 出る弾も変える
item modify entity @s weapon.mainhand [{"function": "minecraft:set_item","item": "minecraft:crossbow"},{"function": "minecraft:set_components","components": {"minecraft:item_model": "villager_cannon:villager_cannon_loaded"}}]

